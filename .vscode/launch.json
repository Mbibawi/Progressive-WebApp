    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5501",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to Chrome",
            "port": 5501,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Firefox against localhost",
            "url": "http://localhost:5501",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "name": "http://127.0.0.1:5501",
            "request": "launch",
            "url": "http://127.0.0.1:5501"
        }
    ]
}